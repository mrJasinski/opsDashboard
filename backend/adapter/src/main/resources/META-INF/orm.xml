<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
   http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">

    <description>XML Mapping file</description>

    <entity class="com.opsDashboard.user.User" access="FIELD">
        <table name="users" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="email"/>
            <basic name="password"/>
            <many-to-one name="role">
                <join-column name="role_id" />
                <cascade>
                    <cascade-all/>
                </cascade>
            </many-to-one>
        </attributes>
    </entity>

    <entity class="com.opsDashboard.user.User$Role" access="FIELD" >
        <table name="roles" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="type">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="countries" />
            <basic name="saStatuses" />
        </attributes>
    </entity>

    <entity class="com.opsDashboard.specialAccess.SpecialAccess" access="FIELD">
        <table name="specialAccesses" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="country"/>
            <basic name="stockId"/>
            <basic name="link"/>
            <basic name="explanation"/>
            <basic name="transportMethod">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="pickupDate"/>
            <basic name="status">
                <enumerated>STRING</enumerated>
            </basic>
            <many-to-one name="reason">
                <join-column name="reason_id" />
                <cascade>
                    <cascade-all/>
                </cascade>
            </many-to-one>
        </attributes>
    </entity>

    <entity class="com.opsDashboard.specialAccess.SpecialAccess$Reason" access="FIELD">
        <table name="special_access_reasons" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="name" />
        </attributes>
    </entity>

    <embeddable class="com.opsDashboard.vo.UserSource" access="FIELD">
        <attributes>
            <basic name="id" />
        </attributes>
    </embeddable>

</entity-mappings>