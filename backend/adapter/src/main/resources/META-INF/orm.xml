        </attributes>
    </entity>

    <entity class="com.opsDashboard.specialAccess.SpecialAccess" access="FIELD">
        <table name="specialAccesses" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="country" />
            <basic name="stockId"/>
            <basic name="link"/>
            <basic name="explanation"/>
            <basic name="transportMethod">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="pickupDate"/>
            <basic name="status">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="reason">
                <enumerated>STRING</enumerated>
            </basic>
        </attributes>
    </entity>

    <entity class="com.opsDashboard.claim.Claim" access="FIELD">
        <table name="claims" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="claimNumber" />
            <basic name="link" />
            <basic name="status">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="assignedDate" />
            <embedded name="vehicle" />
            <embedded name="assignedAgent">
                <attribute-override name="id">
                    <column name="user_id"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>

    <entity class="com.opsDashboard.vehicle.Vehicle" access="FIELD">
        <table name="vehicles" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="stockId" />
           <embedded name="merchant">
                <attribute-override name="id">
                    <column name="merchant_id"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>

    <entity class="com.opsDashboard.merchant.Merchant" access="FIELD" >
        <table name="merchants" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="country">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="email" />
            <basic name="name" />
            <basic name="address" />
            <basic name="phone" />
        </attributes>
    </entity>

