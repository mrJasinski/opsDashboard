<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
   http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">

    <description>XML Mapping file</description>

    <entity class="com.opsDashboard.user.User" access="FIELD">
        <table name="users" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="email"/>
            <basic name="password"/>
            <basic name="isAvailable" />
            <many-to-one name="role">
                <join-column name="role_id" />
                <cascade>
                    <cascade-all/>
                </cascade>
            </many-to-one>
            <one-to-many name="workdays" >
                <join-column name="user_id" />
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>

    <entity class="com.opsDashboard.user.User$Workday" access="FIELD" >
        <table name="workdays" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="workday" />
            <basic name="startTime" />
            <basic name="workTimeMins" />
            <basic name="location" >
                <enumerated>STRING</enumerated>
            </basic>
        </attributes>
    </entity>

    <entity class="com.opsDashboard.user.User$Role" access="FIELD" >
        <table name="roles" />
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY" />
            </id>
            <basic name="type">
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="countries" />
